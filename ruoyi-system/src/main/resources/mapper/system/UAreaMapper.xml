<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.UAreaMapper">
    
    <resultMap type="UArea" id="UAreaResult">
        <result property="id"    column="id"    />
        <result property="type"    column="type"    />
        <result property="area"    column="area"    />
    </resultMap>

    <sql id="selectUAreaVo">
        select id, type, area from u_area
    </sql>

    <select id="selectUAreaList" parameterType="UArea" resultMap="UAreaResult">
        <include refid="selectUAreaVo"/>
        <where>  
            <if test="type != null  and type != ''"> and type like concat('%', #{type}, '%')</if>
        </where>
    </select>
    
    <select id="selectUAreaById" parameterType="Long" resultMap="UAreaResult">
        <include refid="selectUAreaVo"/>
        where id = #{id}
    </select>

    <insert id="insertUArea" parameterType="UArea" useGeneratedKeys="true" keyProperty="id">
        insert into u_area
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="type != null">type,</if>
            <if test="area != null">area,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="type != null">#{type},</if>
            <if test="area != null">#{area},</if>
         </trim>
    </insert>

    <update id="updateUArea" parameterType="UArea">
        update u_area
        <trim prefix="SET" suffixOverrides=",">
            <if test="type != null">type = #{type},</if>
            <if test="area != null">area = #{area},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUAreaById" parameterType="Long">
        delete from u_area where id = #{id}
    </delete>

    <delete id="deleteUAreaByIds" parameterType="String">
        delete from u_area where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>