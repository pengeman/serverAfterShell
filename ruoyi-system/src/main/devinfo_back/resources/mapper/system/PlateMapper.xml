<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PlateMapper">
    
    <resultMap type="Plate" id="PlateResult">
        <result property="id"    column="id"    />
        <result property="type"    column="type"    />
        <result property="material"    column="material"    />
        <result property="thinkness"    column="thinkness"    />
        <result property="weight"    column="weight"    />
        <result property="price"    column="price"    />
    </resultMap>

    <sql id="selectPlateVo">
        select id, type, material, thinkness, weight, price from u_plate
    </sql>

    <select id="selectPlateList" parameterType="Plate" resultMap="PlateResult">
        <include refid="selectPlateVo"/>
        <where>  
            <if test="type != null  and type != ''"> and type = #{type}</if>
        </where>
    </select>
    
    <select id="selectPlateById" parameterType="Long" resultMap="PlateResult">
        <include refid="selectPlateVo"/>
        where id = #{id}
    </select>

    <insert id="insertPlate" parameterType="Plate" useGeneratedKeys="true" keyProperty="id">
        insert into u_plate
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="type != null">type,</if>
            <if test="material != null">material,</if>
            <if test="thinkness != null">thinkness,</if>
            <if test="weight != null">weight,</if>
            <if test="price != null">price,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="type != null">#{type},</if>
            <if test="material != null">#{material},</if>
            <if test="thinkness != null">#{thinkness},</if>
            <if test="weight != null">#{weight},</if>
            <if test="price != null">#{price},</if>
         </trim>
    </insert>

    <update id="updatePlate" parameterType="Plate">
        update u_plate
        <trim prefix="SET" suffixOverrides=",">
            <if test="type != null">type = #{type},</if>
            <if test="material != null">material = #{material},</if>
            <if test="thinkness != null">thinkness = #{thinkness},</if>
            <if test="weight != null">weight = #{weight},</if>
            <if test="price != null">price = #{price},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePlateById" parameterType="Long">
        delete from u_plate where id = #{id}
    </delete>

    <delete id="deletePlateByIds" parameterType="String">
        delete from u_plate where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>